<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@id/tabLayout"
    app:layout_constraintTop_toBottomOf="@id/rightArrow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2">

    <ImageView
        android:id="@+id/onboarding_photo_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/onboarding_1" />

    <ImageView
        android:id="@+id/onboarding_photo_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/onboarding_2" />

    <ImageView
        android:id="@+id/onboarding_photo_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/onboarding_3" />

    <ImageView
        android:id="@+id/onboarding_photo_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/onboarding_4" />

</GridLayout>
